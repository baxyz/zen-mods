{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2022": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.d.ts"]
}
